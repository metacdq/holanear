<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        tools:context=".activity.CallActivity">

    <TextView
            android:text="@string/alan_maulana_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/callTextView"
            android:textStyle="normal"
            android:textSize="@dimen/call_text_user"
            android:maxLines="1"
            android:textColor="@color/white"
            android:layout_margin="@dimen/margin_big"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:layout_marginTop="@dimen/margin_call"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageViewUser"
            app:layout_constraintTop_toBottomOf="@id/callTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/margin_big"
            app:layout_constraintBottom_toTopOf="@id/layoutButton"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextureView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textureViewRemote" />
    <org.linphone.mediastream.video.capture.CaptureTextureView
            android:visibility="gone"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/textureViewLocal" />
    <LinearLayout
            android:id="@+id/layoutButton"
            app:layout_constraintBottom_toTopOf="@+id/layoutButtonCall"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/acceptLayout"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:visibility="visible"
                    android:padding="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_call"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/call_bg"
                    app:srcCompat="@drawable/ic_call"
                    android:id="@+id/imageViewCall"
                    android:layout_gravity="center_horizontal"
                    app:tint="@color/white" />
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_call"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/hang_up_bg"
                    app:srcCompat="@drawable/ic_hang_up"
                    android:id="@+id/imageViewCallEnded"
                    app:tint="@color/white"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
            android:visibility="gone"
            android:id="@+id/layoutButtonCall"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/layoutSwitchVideo"
                android:visibility="gone"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <ImageView
                    app:tint="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_call_half"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/call_widget_bg"
                    app:srcCompat="@drawable/ic_swicth_video_camera"
                    android:id="@+id/SwitchCamera"/>
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <ImageView
                    app:tint="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_call_half"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/call_widget_bg"
                    app:srcCompat="@drawable/ic_video_call"
                    android:id="@+id/imageViewVideoVoice"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/layoutSpeaker"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_call_half"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/call_widget_bg"
                    app:srcCompat="@drawable/ic_loadspeaker"
                    android:id="@+id/imageViewSpeaker"
                    app:tint="@color/black" />
        </LinearLayout>
        <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <ImageView
                    app:tint="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_call_half"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/call_widget_bg"
                    app:srcCompat="@drawable/ic_mic_off"
                    android:id="@+id/SwitchMic"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>